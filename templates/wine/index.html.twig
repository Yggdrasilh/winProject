{% extends 'base.html.twig' %}

{% block title %}Hello WineController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>


	<h1>Liste des vins</h1>
	{% for wine in wines %}

		<div class="card" style="width: 20rem;">
			<img src="..." class="card-img-top" alt="{{wine.name}}">
			<div class="card-body">
				<h5 class="card-title">{{wine.name}}</h5>
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item">
					<p class="card-text">{{wine.description}}</p>
				</li>
				<li class="list-group-item">{{wine.region.name}}</li>
			</ul>
			<div class="card-body">
				<a href="#" class="btn btn-primary">En savoir plus !</a>
			</div>
		</div>

	{% endfor %}

{% endblock %}
